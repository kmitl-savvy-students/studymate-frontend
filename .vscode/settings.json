{
	"json.format.enable": true,
	"explorer.autoReveal": true,

	"editor.fontSize": 16,
	"editor.fontFamily": "Consolas, monospace",
	"editor.detectIndentation": false,
	"editor.dragAndDrop": false,
	"editor.renderWhitespace": "all",
	"editor.cursorStyle": "line-thin",
	"editor.accessibilitySupport": "off",
	"editor.autoClosingBrackets": "beforeWhitespace",
	"editor.autoClosingOvertype": "always",
	"editor.autoClosingDelete": "never",
	"editor.autoClosingQuotes": "beforeWhitespace",
	"editor.autoClosingComments": "beforeWhitespace",
	"editor.autoSurround": "never",
	"editor.bracketPairColorization.enabled": false,
	"editor.codeActionWidget.includeNearbyQuickFixes": false,
	"editor.codeActionWidget.showHeaders": false,
	"editor.codeLens": false,
	"editor.colorDecorators": false,
	"editor.copyWithSyntaxHighlighting": false,
	"editor.dropIntoEditor.enabled": false,
	"editor.dropIntoEditor.showDropSelector": "never",
	"editor.experimental.asyncTokenization": false,
	"editor.experimental.asyncTokenizationLogging": false,
	"editor.emptySelectionClipboard": true,
	"editor.find.cursorMoveOnType": true,
	"editor.find.addExtraSpaceOnTop": true,
	"editor.formatOnSave": true,
	"editor.minimap.enabled": false,
	"editor.minimap.renderCharacters": false,
	"editor.stickyScroll.enabled": false,
	"editor.renderFinalNewline": "off",
	"editor.insertSpaces": false,

	"workbench.cloudChanges.autoResume": "off",
	"workbench.cloudChanges.continueOn": "off",
	"workbench.activityBar.iconClickBehavior": "toggle",
	"workbench.activityBar.location": "top",
	"workbench.colorTheme": "Monokai",
	"workbench.preferredDarkColorTheme": "Default Dark+",
	"workbench.preferredLightColorTheme": "Default Light+",
	"workbench.iconTheme": "vs-seti",
	"workbench.statusBar.visible": false,
	"workbench.tips.enabled": false,
	"workbench.tree.enableStickyScroll": false,
	"workbench.tree.indent": 16,
	"workbench.tree.renderIndentGuides": "always",
	"workbench.view.alwaysShowHeaderActions": false,
	"workbench.editor.alwaysShowEditorActions": false,

	"breadcrumbs.enabled": true,
	"breadcrumbs.filePath": "off",

	"window.commandCenter": false,
	"window.confirmSaveUntitledWorkspace": false,
	"window.density.editorTabHeight": "compact",
	"window.titleSeparator": " - ",
	"window.zoomPerWindow": false,

	"npm.packageManager": "npm",
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"typescript.updateImportsOnFileMove.enabled": "always",

	"editor.defaultFormatter": "esbenp.prettier-vscode",

	"files.autoSave": "off",
	"files.exclude": {
		"**/.vscode": true,
		"**/LICENSE": true,
		"**/.gitignore": true,

		"**/.angular": true,
		"**/.prettierrc": true,
		"**/angular.json": true,
		"**/package-lock.json": true,
		"**/tailwind.config.js": true,
		"**/tsconfig.app.json": true,
		"**/tsconfig.json": true,
		"**/tsconfig.spec.json": true,
		"**/node_modules": true
	}
}
